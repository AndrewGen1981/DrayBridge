<style>
    .popup.hidden {
        display: none;
    }
    .popup {
        position: fixed;
        top: 0; left: 0;
        width: 100%; height: 100%;

        background: rgba(0,0,0,0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1;
    }
    .popup * {
        font-size: 1.35rem;
        color: var(--font-col-300);
    }
    .popup-content {
        padding: 20px;
        width: min(50rem, 95%);
        max-height: 70dvh;
        overflow-y: auto;
        
        background-color: var(--font-col-100, #fff);
        border-radius: 8px;
    }
    #popup-close {
        float: right;
        font-size: 24px;
        line-height: 0.5;
        cursor: pointer;
    }
    #popup-title {
        font-size: 1.5rem;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>


<div id="popup" class="popup hidden">
    <div class="popup-content">
        <span id="popup-close">&times;</span>
        <h2 id="popup-title"></h2>
        <div id="popup-body"></div>
    </div>
</div>


<script defer>

    const popup = document.getElementById('popup')
    const popupClose = document.getElementById('popup-close')
    const popupTitle = document.getElementById('popup-title')
    const popupBody = document.getElementById('popup-body')

    // Закриття popup
    if (popupClose) popupClose.addEventListener('click', () => {
        popup.classList.add('hidden')
    })

    // Закриття при кліку поза вікном
    if (popup) popup.addEventListener('click', (e) => {
        if (e.target === popup) {
            popup.classList.add('hidden')
        }
    })

    function showPopup(title, loading = true) {
        if (popupTitle) popupTitle.innerHTML = title
        if (popupBody) popupBody.innerHTML = loading ? "Loading..." : ""
        if (popup) popup.classList.remove('hidden')
    }

    function setPopupBody(body = "") {
        if (popupBody) popupBody.innerHTML = body
    }

</script>