<%
    const {
        startDate = "", endDate = "",
        formAction, formMethod = "GET"
    } = locals

    const dateISO = (d) => d.toISOString().split("T")[0]
    const today = dateISO(new Date())
%>


<style>
    form.__period_form {
        margin-block: 2rem;

        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    form.__period_form input[type="date"] {
        padding-inline: 1rem;

        line-height: 3.5rem;
        font-size: 1.3rem;

        background-color: #ffffff94;

        border-radius: 0.8rem;
        border: unset;
    }

    form.__period_form input[type="date"]:is(:hover, :focus-within) {
        background-color: #f7fafa;
    }
</style>

    
<% if (formAction) { %>

    <form action="<%= formAction %>" method="<%= formMethod %>" class="__period_form">
        
        <input type="date" name="start_date" id="start_date"
            max="<%= today %>"
            value="<%= dateISO(startDate) %>"
            required
        />

        <input type="date" name="end_date" id="end_date"
            max="<%= today %>"
            value="<%= dateISO(endDate) %>"
            required
        />
        
        <button type="submit" class="standart-btn">Submit</button>

    </form>

<% } %>