<% const { main_menu = [], role, isAuthenticated } = locals %>

<nav>

    <% main_menu.forEach(({
            route = "/", title = "?", svg,
            authSensitive, roleSensitive
        }) => { %>

        <% if ((!authSensitive || isAuthenticated) && (!roleSensitive || role === roleSensitive)) { %>
            <a href="<%= route %>" title="<%= title %>">
                <dt><%= title %></dt>
                <dd><%- svg %></dd>
            </a>
        <% } %>

    <% }) %>

</nav>